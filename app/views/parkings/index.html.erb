<h1>Parking Lots</h1>

<div class="container">
  <div class="row">
    <% @parkings.each do |parking| %>
      <div class="col-xs-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.3)), url('<%= cl_image_path parking.picture, height: 300, width: 400, crop: :fill %>')">
          <h2><%= parking.address %></h2>
          <p>Price/hour: <%= parking.price %></p>
          <div class="rating">
            <% if parking.reviews.last.nil? %>
              <i class="nr"> Not rated</i>
            <% else %>
              <% (parking.reviews.map{|review| review.rating_user}.sum.to_f / parking.reviews.size).round.times do %>
                <i class="fas fa-star rated"></i>
              <% end %>
            <% end %>
          </div>
          <%= link_to "", parking_path(parking), class:'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a Parking Lot", new_parking_path, class:"btn btn-primary" %>
</div>
