<div id="show-banner">
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @parking.picture, height: 1000, width: 1000 %>')">
 </div>
</div>
 <div>
   <img class="avatar-bordered" src='https://kitt.lewagon.com/placeholder/users/krokrob'/>
 </div>
 <div class="container transparent">
    <h1><%= @parking.name.upcase %></h1>
    <p><strong><%=  @parking.address %></strong></p>
    <p>Confirmation: <%= @parking.confirmation ? "Ready to park!" : "Needs owner approval" %></p>
    <p>Covered: <% if @parking.covered %>
        <i class="far fa-check-circle checkmark"></i>
      <% else %>
        <i class="far fa-times-circle times"></i>
      <% end %>
    </p>
    <p>Security: <% if @parking.security %>
        <i class="far fa-check-circle checkmark"></i>
      <% else %>
        <i class="far fa-times-circle times"></i>
      <% end %>
    </p>
    <p>Camera: <% if @parking.camera %>
        <i class="far fa-check-circle checkmark"></i>
      <% else %>
        <i class="far fa-times-circle times"></i>
      <% end %>
    </p>
    <p>Size: <%= @parking.size %></p>
    <p>Price/hour: <%= @parking.price %></p>
    <% if current_user != @parking.user || !user_signed_in?%>
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#newBooking">Book it</button>
      <%= render "bookings/new", parking: @parking, booking: Booking.new %>
    <% end %>
      <%= link_to "Back", root_path, class: "btn btn-danger" %>
    <% if policy(@parking).edit? %>
    <%= link_to "Update", edit_parking_path(@parking), class: "btn btn-warning" %>
  <% end %>
  <% if policy(@parking).destroy? %>
    <%= link_to "Delete", parking_path(@parking), method: :delete, data: { confirm: "Are you sure you want to delete the parking?" }, class: "btn btn-warning" %>
  <% end %>
    <div
      id="map"
      style="width: 100%;height: 600px; margin-top: 20px; margin-bottom: 20px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

