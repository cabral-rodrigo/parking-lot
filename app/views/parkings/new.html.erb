

<%= simple_form_for(@parking) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :picture %>
  <%= f.input :picture_cache, as: :hidden %>
  <%= f.input :confirmation, label: "confirmation" %>
  <%= f.input :covered, label: "covered" %>
  <%= f.input :security, label: "security" %>
  <%= f.input :camera, label: "camera" %>
  <%= f.input :size, collection: ["Small Car", "Medium Car", "Big Car", "Truck"] %>
  <%= f.input :gated, label: "gated" %>
  <%= f.input :price, label: "$/hr"%>
  <%= f.button :submit, "Create parking", class: "btn btn-danger" %>
  <%= link_to "Back", root_path, class: "btn btn-primary" %>
<% end %>
