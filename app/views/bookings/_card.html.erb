<div class="card-category">

 <div class="park-image">
  <div style="background-image: url(<%= cl_image_path booking.parking.picture, height: 300, width: 400, crop: :fill %>); height: 11.1em; width: 10em">
  </div>
  <div class="parking-info">
    <h2><%= booking.parking.name.upcase %></h2>
    <p><%= booking.parking.address %></p>

    <p>
     <% if booking.parking.confirmation  %>
     Approved <i class="fas fa-check-circle"style="color:green"></i>
     <% else %>
     Pending <i class="fas fa-exclamation-circle"style="color:yellow"></i>
     <% end %>
    </p>
    <p><%= booking.date %></p>

  </div>
</div>

  <%= link_to "", parking_path(booking.parking), class:'card-link' %>
</div>
